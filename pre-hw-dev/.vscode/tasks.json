{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build",
                "-DBUILD_SIM=ON",
                "-DBUILD_TESTS=ON",
                "-DENABLE_DEBUG=ON"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--parallel"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": "CMake Configure"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/build/jezgro_test",
            "windows": {
                "command": "${workspaceFolder}\\build\\Debug\\jezgro_test.exe"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "dependsOn": "CMake Build"
        },
        {
            "label": "Run Swarm Simulator",
            "type": "shell",
            "command": "python",
            "args": [
                "sim/swarm_simulator.py",
                "--virtual",
                "--nodes", "5"
            ],
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Full Rebuild",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--clean-first",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "ARM Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build-arm"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Start Renode GDB Server",
            "type": "shell",
            "command": "C:\\Program Files\\Renode\\bin\\Renode.exe",
            "args": [
                "--console",
                "--disable-xwt",
                "-e", "include @renode/debug.resc"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^GDB Server running",
                    "file": 1,
                    "line": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting",
                    "endsPattern": "^GDB Server running"
                }
            }
        },
        {
            "label": "Run in Renode",
            "type": "shell",
            "command": "C:\\Program Files\\Renode\\bin\\Renode.exe",
            "args": [
                "--console",
                "--disable-xwt",
                "-e", "include @renode/debug.resc; start"
            ],
            "problemMatcher": [],
            "dependsOn": "ARM Build"
        }
    ]
}
