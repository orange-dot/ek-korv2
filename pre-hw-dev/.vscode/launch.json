{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/jezgro_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Debug Tests (LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/jezgro_test",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Debug Tests (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/jezgro_test.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Python: Swarm Simulator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sim/swarm_simulator.py",
            "args": ["--virtual", "--nodes", "3", "--duration", "10"],
            "console": "integratedTerminal"
        }
    ]
}