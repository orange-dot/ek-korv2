{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug JEZGRO (Renode)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "executable": "${workspaceFolder}/build-arm/jezgro_firmware",
            "device": "STM32G474RE",
            "svdFile": "${workspaceFolder}/renode/STM32G474.svd",
            "runToEntryPoint": "main",
            "preLaunchTask": "ARM Build",
            "gdbPath": "arm-none-eabi-gdb",
            "showDevDebugOutput": "raw",
            "preLaunchCommands": [
                "set remotetimeout 60"
            ],
            "postLaunchCommands": [
                "monitor start"
            ]
        },
        {
            "name": "Attach to Renode",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "executable": "${workspaceFolder}/build-arm/jezgro_firmware",
            "device": "STM32G474RE",
            "svdFile": "${workspaceFolder}/renode/STM32G474.svd",
            "gdbPath": "arm-none-eabi-gdb"
        },
        {
            "name": "Debug Tests (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/jezgro_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Debug Tests (LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/jezgro_test",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Debug Tests (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Debug/jezgro_test.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "preLaunchTask": "CMake Build"
        },
        {
            "name": "Python: Swarm Simulator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/sim/swarm_simulator.py",
            "args": ["--virtual", "--nodes", "3", "--duration", "10"],
            "console": "integratedTerminal"
        }
    ]
}